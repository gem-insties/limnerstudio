        <p class="error"> {{ data4 }} | Activity UUID: {{data3.uuid}}</p>
        {% else %}
        <p>{{ data4 }}</p>
        {% endif %}
    </div>

    <!-- Delete -->
    {% function data5 = "crm/controller/activities/delete", uuid: data3.uuid %}
    <div class="data-container">
        <p>Delete</p>
        {% if data5.errors %}
        <p class="error"> {{ data5 }} | Activity UUID: {{ data3.uuid }}</p>
        {% else %}
        <p>{{ data5 }}</p>
        {% endif %}
    </div>

    <!-- Hero Section -->
