<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Controllers - Activity</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<style>
    .data-container {
        padding: 24px;
    }

    .data-container+.data-container {

        margin-top: 24px;
    }

    .data-container p {
        font-weight: 600;
        margin-bottom: 8px;
    }

    .data-container p~p {
        font-weight: 400;
        max-width: 100%;
        margin-bottom: 0px;
    }

    p.error {
        background-color: rgba(247, 104, 104, 0.134);
        color: red;
        padding: 8px 16px;
        border-radius: 4px;
    }
</style>

<body>
    <!-- Navbar -->
    <nav class="flex justify-between items-center p-6 bg-white shadow">
        <h1 class="text-2xl font-bold text-blue-600">MyBrand</h1>
        <div>
            <a href="#features" class="px-4 text-gray-700 hover:text-blue-600">Features</a>
            <a href="#about" class="px-4 text-gray-700 hover:text-blue-600">About</a>
            <a href="#contact" class="px-4 text-gray-700 hover:text-blue-600">Contact</a>
            <a href="#signup" class="ml-4 px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700">Sign Up</a>
        </div>
    </nav>

    <!-- Get All With Pagination -->
    {% parse_json params %}
    {
    "search_by": "type",
    "keyword": "meeting",
    "sort_by": "updated_at",
    "sort_order": "DESC",
    "size": 1,
    "page": 1
    }
    {% endparse_json %}
    {% function data = "crm/controller/activities/list", params: params %}
    <div class="data-container">
        <p>Get All With Pagination</p>
        {% if data.errors %}
        <p class="error"> {{ data }}</p>
        {% else %}
        <p>{{ data }}</p>
        {% endif %}
    </div>

    <!-- Get All Without Pagination -->
    {% parse_json paramsnopagination %}
    {
    "search_by": "type",
    "keyword": "meeting",
    "sort_by": "updated_at",
    "sort_order": "DESC",
    "size": 1,
    "page": 1,
    "pagination": false
    }
    {% endparse_json %}
    {% function data = "crm/controller/activities/list", params: paramsnopagination %}
    <div class="data-container">
        <p>Get All Without Pagination</p>
        {% if data.errors %}
        <p class="error"> {{ data }}</p>
        {% else %}
        <p>{{ data }}</p>
        {% endif %}
    </div>

    <!-- Get -->
    {% function data2 = "crm/controller/activities/get", uuid: data.results[0].uuid %}
    <div class="data-container">
        <p>Get</p>
        {% if data2.errors %}
        <p class="error"> {{ data2 }} | Activity UUID: {{data.results[0].uuid}}</p>
        {% else %}
        <p>{{ data2 }}</p>
        {% endif %}
