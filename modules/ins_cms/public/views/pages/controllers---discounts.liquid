<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Controller - Ecommerce Discounts</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<style>
    .data-container {
        padding: 24px;
    }

    .data-container+.data-container {

        margin-top: 24px;
    }

    .data-container p {
        font-weight: 600;
        margin-bottom: 8px;
        width: fit-content;
    }

    .data-container p~p {
        font-weight: 400;
        max-width: 100%;
        margin-bottom: 0px;
    }

    p.error {
        background-color: rgba(247, 104, 104, 0.134);
        color: red;
        padding: 8px 16px;
        border-radius: 4px;
    }
</style>

<body>
    <!-- Navbar -->
    <nav class="flex justify-between items-center p-6 bg-white shadow">
        <h1 class="text-2xl font-bold text-blue-600">MyBrand</h1>
        <div>
            <a href="#features" class="px-4 text-gray-700 hover:text-blue-600">Features</a>
            <a href="#about" class="px-4 text-gray-700 hover:text-blue-600">About</a>
            <a href="#contact" class="px-4 text-gray-700 hover:text-blue-600">Contact</a>
            <a href="#signup" class="ml-4 px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700">Sign Up</a>
        </div>
    </nav>

    <!-- Get All -->
    {% parse_json paramsgetall %}
    {
    "search_by": "discount_name",
    "keyword": "Discount",
    "sort_by": "updated_at",
    "sort_order": "DESC",
    "size": 1,
    "page": 1
    }
    {% endparse_json %}
    {% function datagetall = "ecommerce/controller/discount/list", params: paramsgetall %}
    <div class="data-container">
        <p>Get All</p>
        {% if datagetall.errors %}
        <p class="error"> {{ datagetall }}</p>
        {% else %}
        <p>{{ datagetall }}</p>
        {% endif %}
    </div>

    <!-- Get -->
    {% function dataget = "ecommerce/controller/discount/get", uuid: datagetall.results[0].uuid %}
    <div class="data-container">
        <p>Get</p>
        {% if dataget.errors %}
        <p class="error"> {{ dataget }} | Discount UUID: {{datagetall.results[0].uuid}}</p>
        {% else %}
        <p>{{ dataget }}</p>
        {% endif %}
    </div>

    <!-- Get by Discount Code -->
  {% function datagetbydiscountcode = "ecommerce/controller/discount/by-code", discount_code: "{{datagetall.results[0].discount_code}}" %}
    <div class="data-container">
        <p>Get by Discount Code</p>
        {% if datagetbydiscountcode.errors %}
        <p class="error"> {{ datagetbydiscountcode }} | Discount Code: {{datagetall.results[0].discount_code}}</p>
        {% else %}
        <p>{{ datagetbydiscountcode }}</p>
        {% endif %}
    </div>

    <!-- Add -->
    {% parse_json paramsadd %}
    {
    "discount_name": "API Added Discount",
    "status": "enabled",
    "discount_code": "api-added-discount",
    "auth_policy_id": 112247,
    "usage_limit": 100,
    "usage_count": 200,
    "discount_type": "fixed_amount",
    "discount_value": 400,
    "usage_limit_per_user": 300,
    "minimum_cart_value": 500,
    "applicable_to": "products",
    "is_applicable_to_all_products": true,
    "is_applicable_to_all_categories": true,
    "category_uuids": [
    "fe0a10d9-8389-4c14-8d32-8dbd54c9e30e",
    "ba6eacc7-636c-4baa-b60a-cc53ae44e92e"
    ],
    "product_uuids": [
    "25292e74-b344-4c98-90e2-eb77bfded39d",
    "f09f76c2-da9b-43bc-a0a8-0fce9d718837"
    ]
    }
    {% endparse_json %}
    {% function dataadd = "ecommerce/controller/discount/create", params: paramsadd %}
    <div class="data-container">
        <p>Add</p>
        {% if dataadd.errors %}
        <p class="error"> {{ dataadd }}</p>
        {% else %}
        <p>{{ dataadd }}</p>
        {% endif %}
    </div>

    <!-- Update -->
    {% parse_json paramsupdate %}
    {
    "discount_name": "API Updated Discount",
    "status": "disabled",
    "discount_code": "api-updated-discount",
    "auth_policy_id": 113895,
    "usage_limit": 1,
    "usage_count": 2,
    "discount_type": "free_shipping",
    "discount_value": 4,
    "usage_limit_per_user": 3,
    "minimum_cart_value": 5,
    "applicable_to": "categories",
    "is_applicable_to_all_products": true,
    "is_applicable_to_all_categories": true,
    "category_uuids": [
    "fe0a10d9-8389-4c14-8d32-8dbd54c9e30e",
    "ba6eacc7-636c-4baa-b60a-cc53ae44e92e"
    ],
    "product_uuids": [
    "25292e74-b344-4c98-90e2-eb77bfded39d",
    "f09f76c2-da9b-43bc-a0a8-0fce9d718837"
    ]
    }
    {% endparse_json %}
    {% function dataupdate = "ecommerce/controller/discount/update", uuid: dataadd.uuid, params:paramsupdate %}
    <div class="data-container">
        <p>Update</p>
        {% if dataupdate.errors %}
        <p class="error"> {{ dataupdate }} | Discount UUID: {{dataadd.uuid}}</p>
        {% else %}
        <p>{{ dataupdate }}</p>
        {% endif %}
    </div>

    <!-- Delete -->
    {% function datadelete = "ecommerce/controller/discount/delete", uuid: dataadd.uuid %}
    <div class="data-container">
        <p>Delete</p>
        {% if datadelete.errors %}
        <p class="error"> {{ datadelete }} | Discount UUID: {{dataadd.uuid}}</p>
        {% else %}
        <p>{{ datadelete }}</p>
        {% endif %}
    </div>

    <!-- Hero Section -->
    <section
        class="flex flex-col items-center text-center py-20 px-6 bg-gradient-to-r from-blue-500 to-indigo-600 text-white">
        <h2 class="text-4xl md:text-5xl font-bold mb-6">Welcome to MyBrand</h2>
        <p class="max-w-2xl mb-8 text-lg">We help you build amazing experiences with a simple and modern platform that
            scales effortlessly.</p>
        <a href="#signup" class="px-6 py-3 bg-white text-blue-600 font-semibold rounded-lg shadow hover:bg-gray-100">Get
            Started</a>
    </section>

    <!-- Features -->
    <section id="features" class="py-16 px-6 bg-white">
        <h3 class="text-3xl font-bold text-center mb-12">Features</h3>
        <div class="grid md:grid-cols-3 gap-10 max-w-6xl mx-auto">
            <div class="p-6 shadow rounded-xl bg-gray-50">
                <h4 class="text-xl font-semibold mb-2">Fast</h4>
                <p>Experience lightning-fast performance with our optimized platform.</p>
            </div>
            <div class="p-6 shadow rounded-xl bg-gray-50">
                <h4 class="text-xl font-semibold mb-2">Secure</h4>
                <p>Your data is protected with industry-leading security practices.</p>
            </div>
            <div class="p-6 shadow rounded-xl bg-gray-50">
                <h4 class="text-xl font-semibold mb-2">Scalable</h4>
                <p>Grow without limits. Our system scales as your business expands.</p>
            </div>
        </div>
    </section>

    <!-- About -->
    <section id="about" class="py-16 px-6 bg-gray-100">
        <div class="max-w-4xl mx-auto text-center">
            <h3 class="text-3xl font-bold mb-6">About Us</h3>
            <p class="text-lg">We are passionate about building tools that empower businesses and individuals. Our
                mission is to simplify technology while keeping it powerful and accessible for everyone.</p>
        </div>
    </section>

    <!-- Contact -->
    <section id="contact" class="py-16 px-6 bg-white">
        <div class="max-w-4xl mx-auto text-center">
            <h3 class="text-3xl font-bold mb-6">Contact Us</h3>
            <p class="mb-4">Have questions? Reach out and we’ll get back to you shortly.</p>
            <a href="mailto:info@mybrand.com"
                class="px-6 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700">Email Us</a>
        </div>
    </section>

    <!-- Footer -->
    <footer class="py-6 text-center bg-gray-900 text-gray-400">
        <p>© 2025 MyBrand. All rights reserved.</p>
    </footer>

</body>

</html>